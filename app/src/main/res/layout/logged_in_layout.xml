<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.android.helpdessk.helpdesk.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/search_btn_group"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50sp"
        android:layout_marginTop="60sp"
        android:paddingLeft="24sp"
        android:paddingRight="24sp"
        android:layout_above="@+id/search_group">

        <Button
            android:id="@+id/search_launch_chat"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="40sp"
            android:background="@drawable/signin_rect"
            android:gravity="center_horizontal"
            android:paddingBottom="12sp"
            android:paddingLeft="90sp"
            android:paddingRight="90sp"
            android:paddingTop="12sp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="Search and Join">
        </Button>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/logged_in_launch_chat"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="10sp"
            android:background="@drawable/signin_rect"
            android:gravity="center_horizontal"
            android:paddingBottom="12sp"
            android:paddingLeft="90sp"
            android:paddingRight="90sp"
            android:paddingTop="12sp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="Launch Chat">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:orientation="vertical"
        android:paddingLeft="24sp"
        android:paddingRight="24sp"
        android:id="@id/search_group">

        <TextView
            android:id="@+id/logged_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:paddingBottom="12sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingTop="12sp"
            android:textSize="20sp"
            android:textAppearance="@anim/animate"
            android:text="User Name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:paddingBottom="12sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingTop="12sp"
            android:textSize="26sp"
            android:text="Search and Join Group" />

        <Spinner
            android:id="@+id/category"
            android:text="@string/cat_prompt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="8sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8sp"
            android:layout_marginTop="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498" />

        <Spinner
            android:id="@+id/country"
            android:text="@string/country_prompt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="8sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8sp"
            android:layout_marginTop="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498" />
        <Spinner
            android:id="@+id/state"
            android:text="@string/states_prompt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="8sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8sp"
            android:layout_marginTop="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498" />
    </LinearLayout>


</RelativeLayout>
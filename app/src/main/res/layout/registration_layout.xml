<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.helpdessk.helpdesk.activities.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayoutLoginContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        android:paddingLeft="24sp"
        android:paddingRight="24sp">

        <TextView
            android:id="@+id/register_form_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0sp"
            android:layout_marginTop="0sp"
            android:paddingLeft="24sp"
            android:paddingRight="24sp"
            android:text="REGISTER ME"
            android:textColor="@color/color_black"
            android:textSize="28sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginBottom="5sp"
                android:inputType="text"
                android:maxWidth="300sp"
                android:minWidth="250sp"
                android:padding="10sp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@null"
                android:hint="User Name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
                android:id="@+id/user_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginBottom="5sp"
                android:inputType="text"
                android:maxWidth="300sp"
                android:minWidth="250sp"
                android:padding="10sp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@null"
                android:hint="Full Name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginBottom="5sp"
                android:maxWidth="300sp"
                android:minWidth="250sp"
                android:padding="10sp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@null"
                android:inputType="textEmailAddress"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginBottom="5sp"
                android:maxWidth="300sp"
                android:minWidth="250sp"
                android:padding="10sp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@null"
                android:inputType="phone"
                android:hint="Phone Number" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnRegisterAndLaunch"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="10sp"
            android:background="@drawable/signin_rect"
            android:gravity="center_horizontal"
            android:paddingBottom="12sp"
            android:paddingLeft="90sp"
            android:paddingRight="90sp"
            android:paddingTop="12sp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="@string/text_launch_chat" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/login_form_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0sp"
            android:layout_marginTop="0sp"
            android:paddingLeft="24sp"
            android:paddingRight="24sp"
            android:text="LOG IN"
            android:textColor="@color/color_black"
            android:textSize="28sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_user_name_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/user_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginBottom="5sp"
                android:inputType="text"
                android:maxWidth="300sp"
                android:minWidth="250sp"
                android:padding="10sp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@null"
                android:hint="User Name"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnLoginLaunch"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="10sp"
            android:background="@drawable/signin_rect"
            android:gravity="center_horizontal"
            android:paddingBottom="12sp"
            android:paddingLeft="90sp"
            android:paddingRight="90sp"
            android:paddingTop="12sp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="SIGN IN" />

    </LinearLayout>

</RelativeLayout>